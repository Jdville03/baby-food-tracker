<% if @size && @size.errors.any? %>
  Please try again:<br><br>
  <ul>
   <% @size.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
 </ul><br>
<% end %>

<h2><a href="/babies/<%= @baby.slug %>">Baby <%= @baby.name %></a></h2>

<h3>Add Height and/or Weight:</h3>

<form action="/sizes/<%= @baby.slug %>/new" method="POST">
  <table border="1">
    <tr>
      <th style="width:120px">Date</th>
      <th style="width:100px">Height (")</th>
      <th style="width:100px">Weight (lbs)</th>
    </tr>
    <tr>
      <td align="center"><input type="date" name="entry_date" id="date" value="<%= @size.entry_date if @size %>" max="<%= Date.current %>" required></td>
      <td align="center"><input type="number" name="height" id="number" value="<%= @size.height if @size %>" step="0.1" min="0.1"></td>
      <td align="center"><input type="number" name="weight" id="number" value="<%= @size.weight if @size %>" step="0.1" min="0.1"></td>
    </tr>
  </table>
  <br>
  <input type="submit" value="Add Entry">
</form>
